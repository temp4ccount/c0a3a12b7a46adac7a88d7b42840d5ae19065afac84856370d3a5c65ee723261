{
  "name": "software-testing-assignment",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "mocha -require babel-register test --exit",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:coverage": "nyc --reporter=text --reporter=lcov --reporter=html --reporter=json npm run test",
    "test:coveralls": "nyc npm test && nyc report --reporter=text-lcov"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.js",
      "!src/.internal/*.js"
    ]
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chai": "^4.3.7",
    "mocha": "^10.2.0"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-register": "^6.26.0",
    "coveralls": "^3.1.1",
    "jest": "^29.3.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0"
  }
}
